<Window x:Class="FormatExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormatExcel"
        mc:Ignorable="d"
        Title="标准化表格" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- First Row: DWG Path -->
        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="5,5,5,5" IsReadOnly="True" Name="TxtDWGPath"  />
        <Button Grid.Row="0" Grid.Column="4"  Grid.ColumnSpan="1" Margin="5,5,5,5" Content="选择DWG路径" Name="BtnSelectDWGPath" Click="BtnSelectDWGPath_Click"/>

        <!-- Second Row: PDF Path -->
        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5,5,5,5" IsReadOnly="True" Name="TxtPDFPath"  />
        <Button Grid.Row="1" Grid.Column="4" Margin="5,5,5,5" Content="选择PDF路径" Name="BtnSelectPDFPath" Click="BtnSelectPDFPath_Click"/>

        <!-- Third Row: Four Buttons with Larger Font -->
        <Button Grid.Row="2" Grid.Column="0" Margin="5" Content="对比PDF和DWG" Name="BtnComparePDFDWG" FontSize="16" FontWeight="Bold" Height="40" Click="BtnComparePDFDWG_Click" />
        <Button Grid.Row="2" Grid.Column="1" Margin="5" Content="DWG文件标准检查"  FontSize="15" FontWeight="Bold" Height="40" Click="BtnGenerateTable_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Margin="5" Content="PDF文件标准检查"  FontSize="15" FontWeight="Bold" Height="40" Click="BtnGenerateTable_Click"/>

        <!-- Fourth Row: Optional Text -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Margin="5" Text="文件命名示例：00103_CHE_VL1_L01_SHD_WL_002108_R02_V1-IP108" TextAlignment="Center" />

        <!-- Fourth Row: Optional Text -->
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Text="[ NEW MIDP INFORMATION ]" FontWeight="Bold" FontSize="17" TextAlignment="Center" />
        <TextBlock Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Text="[ OLD MIDP INFORMATION]" FontWeight="Bold" FontSize="17" TextAlignment="Center" />

        <!-- Fifth Row: Design Stage -->
        <Label Grid.Row="5" Grid.Column="2" Margin="5" Content="Design Stage" HorizontalAlignment="Right" />
        <TextBox Grid.Row="5" Grid.Column="3" Margin="5" Name="TxtDesignStage" />

        <!-- Sixth Row: Category -->
        <Label Grid.Row="6" Grid.Column="2" Margin="5" Content="Category" HorizontalAlignment="Right" />
        <TextBox Grid.Row="6" Grid.Column="3" Margin="5" Name="TxtCategory" />

        <!-- Seventh Row: To Company -->
        <Label Grid.Row="7" Grid.Column="2" Margin="5" Content="To Company" HorizontalAlignment="Right" />
        <TextBox Grid.Row="7" Grid.Column="3" Margin="5" Name="TxtToCompany" />

        <!-- Eighth Row: Zones -->
        <Label Grid.Row="8" Grid.Column="2" Margin="5" Content="Zones" HorizontalAlignment="Right" />
        <TextBox Grid.Row="8" Grid.Column="3" Margin="5" Name="TxtZones" />

        <!-- TEN Row: Zones -->
        <Button Grid.Row="9" Grid.Column="0" Margin="5" Grid.ColumnSpan="2" Content="生成新MIDP表格(NEW MIDP)"  FontSize="15" FontWeight="Bold" Height="40" Click="BtnGenerateTable_Click"/>
        <Button Grid.Row="9" Grid.Column="2" Margin="5" Grid.ColumnSpan="2" Content="生成旧MIDP表格(OLD MIDP)"  FontSize="15" FontWeight="Bold" Height="40" Click="BtnGenerateTable_Click"/>


        <!-- Footer: Author Information -->
        <TextBlock Grid.Row="10" Grid.Column="3" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Right" TextAlignment="Right">
            <TextBlock Text="Merlin Hu, merlin.dctc@gmail.com" />
            <LineBreak />
            <TextBlock Text="CSADI | DCTC Dep." />
        </TextBlock>
    </Grid>
</Window>
